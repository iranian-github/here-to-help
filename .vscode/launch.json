{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Next.js App",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect"
      ],
      "preLaunchTask": "npm: install dependencies",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}